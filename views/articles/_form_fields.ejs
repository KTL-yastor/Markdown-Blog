<div class="form-group mt-3">
    <label for="title">Title</label>
    <input required type="text" name="title" id="title" class="form-control" value="<%= locals.article.title %>">


</div>
<div class="form-group mt-3">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control" ><%= locals.article.description %></textarea>
    


</div>
<div class="form-group mt-3">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control" ><%= locals.article.markdown %></textarea>
    


</div>

<a href="/" class="btn btn-secondary mt-3">Cancel</a>
<button type="submit" class="btn btn-primary mt-3">Save</button>